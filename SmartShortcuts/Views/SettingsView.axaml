<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:cp="clr-namespace:ThemeEditor.Controls.ColorPicker;assembly=ThemeEditor.Controls.ColorPicker"
             x:Class="SmartShortcuts.Views.SettingsView">

	<StackPanel>
		<Label Content="Settings"  FontSize="30" HorizontalAlignment="Center" />
		<StackPanel Orientation="Horizontal">
			<Label Content="Application theme" />
			<Button Background="">
				<Button.Flyout>
					<Flyout Placement="Bottom">
						<Label Content="Color" />
					</Flyout>
				</Button.Flyout>
			</Button>
		</StackPanel>
	</StackPanel>
</UserControl>