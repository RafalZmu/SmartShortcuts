<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SmartShortcuts.Views.ShortcutsView">
	<ScrollViewer>
		<Grid Margin="0,30,0,0" RowDefinitions="Auto, Auto">
			<ItemsControl Grid.Row="0" Items="{Binding Shortcuts, Mode= TwoWay}">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Grid ColumnDefinitions="*,*">
							<TextBox Grid.Column="0" Watermark="Shortcut" Text="{Binding ShortcutToDisplay, Mode=TwoWay}" />
							<TextBox Grid.Column="1" Watermark="Action" Text="{Binding Action, Mode=TwoWay}" />
						</Grid>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
			<Button Grid.ColumnSpan="4" Grid.Row="1" Content="Add new shortcut" Command="{Binding AddNewShortcutCommand}" />
		</Grid>
	</ScrollViewer>
</UserControl>